{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul>
        {{#each posts as |post|}}
        <li>
            <article>
                <div>
                    <a href="/post/{{id}}">{{title}}</a>
                </div>
                <div>
                    <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
                </div>
            </article>
            <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<div>
    <button type="submit"><a href="/dashboard/newpost">Create New Post</a></button>
</div>