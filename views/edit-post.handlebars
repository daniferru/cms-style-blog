<article>
    <a href="/dashboard">Back to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-form"></form>
    <div>
        <input type="text" id="edit-form" value="{{post.title}}"/>
    </div>
    <div>
        <textarea name="post-text" id="post-text" placeholder="Enter esited post content here">{{post.post_text}}</textarea>
    </div>
    <div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </div>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/public/js/edit.js"></script>
<script src="/public/js/delete.js"></script>
<script src="/public/js/comment.js"></script>